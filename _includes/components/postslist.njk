<section class="container">

	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="row mb-4">
		<div class="col">
			<h3 style="margin-bottom:5px">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.tags %}
				<p class="mb-1">
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag" class="badge badge-light text-uppercase" style="padding: 5px;">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}			
			<p class="mb-3">
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</p>			
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</div>
		</article>
	{% endfor %}

</section>
